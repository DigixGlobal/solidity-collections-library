extends:
  eslint-config-airbnb

settings:
  ecmascript: 6

env:
  mocha: true

rules:
  arrow-body-style: 0
  max-len: 0
  no-underscore-dangle: 0
  func-names: 0
  consistent-return: 0
  prefer-arrow-callback: 0
  no-console: 0

globals:
  contract: 1
  assert: 1
  web3: 1
  artifacts: 1

parserOptions:
  ecmaFeatures:
    experimentalObjectRestSpread: true
